            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="False">
                <Setter Property="Background" Value="{StaticResource GenericBackgroundUnCheckedBrush}"/>
                <Setter Property="Foreground" Value="{StaticResource GenericForegroundUnCheckedBrush}"/>
            </Trigger>
        </Style.Triggers>
